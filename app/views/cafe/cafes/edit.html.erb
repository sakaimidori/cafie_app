<h2>店舗基本情報編集</h2>

<%= form_with model: @cafe, url: cafe_cafes_path do |f| %>

    <label>店名</label>
    <%= f.text_field :cafe_name %><br />

    <label>電話番号</label>
    <%= f.text_field :phone_number %><br />

    <label>住所</label>
    <%= f.text_field :address %><br />

    <label>メールアドレス</label>
    <%= f.email_field :email %><br />

    <label>営業時間</label>
    <%= f.text_field :business_hour %><br />

    <label>定休日</label>
    <%= f.text_field :fixed_holiday %><br />

    <label>支払い方法</label>
    <%= f.text_field :payment_method %><br />

    <label>喫煙・禁煙</label>
    <%= f.text_field :smoking %><br />

    <label>カフェ紹介文</label>
    <%= f.text_field :introduce %><br />

    <label>備考</label>
    <%= f.text_field :remarks %><br />

    <%= f.submit "変更を保存" %>

<% end %>