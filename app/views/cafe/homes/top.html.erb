<div class="container text-center">

  <h3 class="mb-5">店舗基本情報</h3>


      <table class = "table">

        <tr>
          <th>店名</th>
          <td><%= @cafe.cafe_name %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @cafe.phone_number %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @cafe.address %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @cafe.email %></td>
        </tr>
        <tr>
          <th>営業時間</th>
          <td><%= @cafe.business_hour %></td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= @cafe.fixed_holiday %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @cafe.payment_method %></td>
        </tr>
        <tr>
          <th>喫煙・禁煙</th>
          <td><%= @cafe.smoking %></td>
        </tr>
        <tr>
          <th>カフェ紹介文</th>
          <td><%= @cafe.introduce %></td>
        </tr>
        <tr>
          <th>備考</th>
          <td><%= @cafe.remarks %></td>
        </tr>
      </table>


        <h3 class="mt-5">現在の混雑状況</h3>
        <h4 class="text-danger">『<%= @cafe.congestion_status_i18n %>』</h4>



        <h3 class="mt-5">店舗写真</h3>
        <div class="mb-5">
          <% if @cafe.cafe_images.attached? %>
            <% @cafe.cafe_images.each do |cafe_image| %>
              <%= image_tag cafe_image.variant(resize_to_limit: [150, 150]) %>
            <% end %>
          <% else %>
            まだ登録されていません
          <% end%>
        </div>



      <div class="mb-5">
        <%= link_to "編集する", edit_cafe_cafes_path, class: "btn btn-primary" %>
        <%= link_to "退会する", confirm_cafe_cafes_path, class: "btn btn-outline-primary" %>
      </div>
  </div>




