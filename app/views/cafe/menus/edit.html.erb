<h2>メニュー編集</h2>


<%= form_with model: @menu, url: cafe_menu_path do |f| %>

  <label>写真</label><br />
  <%= f.file_field :image, accept: "image/*" %><br />
  <label>メニュー名</label>
  <%= f.text_field :menu_name %><br />

  <label>価格</label>
  <%= f.text_field :price %>円<br />

  <%= f.submit "変更を保存" %>

<% end %>