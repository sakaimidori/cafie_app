<div class="container mb-5 text-center">

  <h4>ユーザー新規登録</h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "user/shared/error_messages", resource: resource %>

      <div class="field mt-5">
        <%= f.label :ユーザー名 %><br />
        <%= f.text_field :username, size: 40 %>
      </div>

      <div class="field mt-3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
      </div>

      <div class="field mt-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", size: 40 %>
      </div>

      <div class="field mt-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40 %>
      </div>

      <div class="actions mt-3">
        <%= f.submit "新規登録", class: "btn btn-sm btn-primary mt-3" %>
      </div>
    <% end %>

    <%#= render "user/shared/links" %>

    <div class = "mt-5">
      <%= link_to "店舗新規登録はこちら", new_cafe_registration_path %>
    </div>
</div>
